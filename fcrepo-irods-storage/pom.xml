	<profiles>
		<!-- this profile is defined for use by the CI server and unit testing -->
		<profile>
			<id>continuous-integration</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<irods.host>localhost</irods.host>
				<irods.port>1247</irods.port>
				<irods.username>fedora</irods.username>
				<irods.password>fedora</irods.password>
				<irods.homedir>/cdrZone/home/fedora</irods.homedir>
				<irods.zone>cdrZone</irods.zone>
				<irods.resource>cdrResc</irods.resource>
			</properties>
		</profile>
	</profiles>
	<build>
		<testResources>
			<testResource>
				<filtering>true</filtering>
				<directory>src/test/resources</directory>
				<includes>
					<include>spring-context.xml</include>
				</includes>
			</testResource>
			<testResource>
				<filtering>false</filtering>
				<directory>src/test/resources</directory>
				<excludes>
					<exclude>spring-context.xml</exclude>
				</excludes>
			</testResource>
		</testResources>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.4</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.3</version>
		</dependency>
