	<packaging>war</packaging>
	<name>CDR Administrative Webapp</name>

	<build>
		<finalName>cdradmin</finalName>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>src/main/resources</directory>
				<includes>
					<include>messages.properties</include>
					<include>log4j.properties</include>
					<include>controlledPaths.txt</include>
					<include>search.properties</include>
					<include>solr.properties</include>
					<include>dlservice.xsd</include>
					<include>fedora-types.xsd</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<excludes>
						<exclude>**/byhand/*.java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.7.3</version>
				<executions>
					<execution>
						<id>schema2-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources</schemaDirectory>
							<schemaIncludes>
								<include>fedora-types.xsd</include>
								<include>dlservice.xsd</include>
							</schemaIncludes>
							<generateDirectory>target/generated-sources/dir2
							</generateDirectory>
							<generatePackage>edu.unc.lib.dl.fedora.types</generatePackage>
							<sources>
								<source>src/main/java</source>
							</sources>
						</configuration>
					</execution>
					<execution>
						<id>schema1-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources</schemaDirectory>
							<schemaIncludes>
								<include>dlservice.xsd</include>
							</schemaIncludes>
							<generateDirectory>target/generated-sources/dir1
							</generateDirectory>
							<generatePackage>edu.unc.lib.dl.schema</generatePackage>
							<sources>
								<source>src/main/java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
